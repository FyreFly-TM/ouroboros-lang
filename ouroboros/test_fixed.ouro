// Simple test program to verify Ouroboros compiler is working

class TestClass {
    int value;
    
    func TestClass() {
        this.value = 42;
        print("TestClass constructor called");
    }
    
    func getValue() {
        return this.value;
    }
}

func main() {
    print("Ouroboros Compiler Test");
    print("======================");
    
    // Test variable declarations
    int x = 10;
    float y = 3.14;
    bool flag = true;
    
    print("Variables initialized:");
    print("x = " + x);
    print("y = " + y);
    print("flag = " + flag);
    
    // Test control flow
    if (flag) {
        print("Boolean test passed");
    }
    
    // Test loops
    int sum = 0;
    for (int i = 1; i <= 5; i = i + 1) {
        sum = sum + i;
    }
    print("Sum of 1 to 5 = " + sum);
    
    // Test while loop
    int count = 0;
    while (count < 3) {
        print("Count = " + count);
        count = count + 1;
    }
    
    // Test class instantiation
    TestClass obj = new TestClass();
    print("Object value = " + obj.getValue());
    
    // Test array
    int[] numbers = [1, 2, 3, 4, 5];
    print("Array test: " + numbers[0] + ", " + numbers[2]);
    
    print("\nAll tests completed successfully!");
} 